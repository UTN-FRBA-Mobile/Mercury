<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/client_visit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        tools:text="00:00hs" />

    <TextView
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/client_visit_time"
        android:layout_margin="10dp"
        tools:text="Juan PÃ©rez" />

    <ImageView
        android:id="@+id/send_wpp_message"
        style="@style/schedule_list_button"
        android:layout_toStartOf="@id/send_sms_message"
        android:src="@drawable/ic_whatsapp" />

    <ImageView
        android:id="@+id/send_sms_message"
        style="@style/schedule_list_button"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_sms" />

</RelativeLayout>